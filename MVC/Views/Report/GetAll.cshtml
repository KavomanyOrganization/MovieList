@model IEnumerable<MVC.Models.Report>

@{
    ViewData["Title"] = "Movie Reports";
}

<div class="container mt-4">
    <h1>Movie Reports</h1>
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="white-space: nowrap;">Cover</th>
                        <th style="white-space: nowrap;">Title</th>
                        <th style="white-space: nowrap;">Comment</th>
                        <th style="white-space: nowrap;">Creation Date</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th style="white-space: nowrap; text-align: center;">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details", "Movie", new { id = report.Movie.Id })" style="text-decoration: none; color: inherit;">
                                    @if (!string.IsNullOrEmpty(report.Movie.Cover))
                                    {
                                        <img src="@report.Movie.Cover" alt="@report.Movie.Title" class="img-thumbnail" style="max-height: 100px;" />
                                    }
                                    else
                                    {
                                        <span>No cover</span>
                                    }
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Movie", new { id = report.Movie.Id })" style="text-decoration: none; color: inherit;">
                                    @report.Movie.Title
                                </a>
                            </td>
                            <td>@report.Comment</td>
                            <td>@report.CreationDate.ToString("dd MMM yyyy")</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Report" asp-action="Delete" asp-route-id="@report.Id"
                                        class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this report?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="margin-top: 20px; color: #6c757d;">
            <p>No reports have been added yet. Click the "Add Report" button to get started.</p>
        </div>
    }
</div>

