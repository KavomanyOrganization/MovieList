@model MVC.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Create report";
}

<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content card-rounded">
            <div class="modal-header card-header-gradient">
                <h5 class="modal-title" id="reportModalLabel">Create Report</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body movie-details">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    </div>
                }
                <form asp-controller="Report" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Comment" class="form-label">Comment</label>
                        <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="MovieId" value="@Model.MovieId" />
                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary-style btn-rounded" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-secondary-style btn-rounded" data-bs-dismiss="modal">Send report</button>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>


