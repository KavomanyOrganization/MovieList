@model IEnumerable<KeyValuePair<MVC.Models.Movie, MVC.Models.User>>

@{
    ViewData["Title"] = "User Activity";
    var currentUser = Context.User.Identity!.Name;
    var isAdmin = Context.User.IsInRole("Admin");

    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var hasNextPage = ViewBag.HasNextPage;
    var hasPreviousPage = ViewBag.HasPreviousPage;
    var startDate = ViewBag.StartDate;
    var endDate = ViewBag.EndDate;
}

<h2>User Activity</h2>

<form method="get" action="@Url.Action("GetActivity", "User")" class="row g-3">
    <div class="col-md-3">
        <label for="startDate" class="form-label">Start Date:</label>
        <input type="date" class="form-control" id="startDate" name="startDate" value="@startDate" />
    </div>
    <div class="col-md-3">
        <label for="endDate" class="form-label">End Date:</label>
        <input type="date" class="form-control" id="endDate" name="endDate" value="@endDate" />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Movie</th>
                    <th>Creation Date</th>
                    <th>User</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model)
                {
                    var user = entry.Value;
                    bool isBanned = user.BannedUntil.HasValue && user.BannedUntil > DateTime.Now;
                    
                    <tr>
                        <td><a href="@Url.Action("Details", "Movie", new { id = entry.Key.Id })">
                            @entry.Key.Title</a></td>
                        <td>@entry.Key.CreationDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @user.UserName
                            @if (isBanned)
                            {
                                <span class="badge bg-danger ms-1">Banned</span>
                                
                                @if (user.BannedUntil.HasValue)
                                {
                                    <div class="small text-danger">
                                        Until: @user.BannedUntil.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                    
                                    TimeSpan timeLeft = user.BannedUntil.Value.ToLocalTime() - DateTime.Now;
                                    string formattedTimeLeft = $"{timeLeft.Days}d {timeLeft.Hours}h {timeLeft.Minutes}m";
                                    
                                    <div class="small text-danger">
                                        Time left: @formattedTimeLeft
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (isAdmin && user.UserName != currentUser)
                            {
                                <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                    @if (isBanned)
                                    {
                                        <button type="submit" class="btn btn-success btn-sm rounded-3 shadow-sm action-button">
                                            <i class="bi bi-check-circle"></i> Unban
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            <select name="banDurationHours" class="form-select form-select-sm ban-duration">
                                                <option value="6">6 hours</option>
                                                <option value="12">12 hours</option>
                                                <option value="24" selected>24 hours</option>
                                                <option value="72">3 days</option>
                                                <option value="168">1 week</option>
                                                <option value="720">30 days</option>
                                                <option value="">Forever</option>
                                            </select>
                                            <button type="submit" class="btn btn-warning btn-sm rounded-3 shadow-sm action-button">
                                                <i class="bi bi-slash-circle"></i> Ban
                                            </button>
                                        </div>
                                    }
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (hasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" 
                           href="@Url.Action("GetActivity", new { startDate = startDate, endDate = endDate, page = currentPage - 1 })" 
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                
                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" 
                               href="@Url.Action("GetActivity", new { startDate = startDate, endDate = endDate, page = i })">
                                @i
                            </a>
                        </li>
                    }
                    else if (i == currentPage - 3 || i == currentPage + 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }
                
                @if (hasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" 
                           href="@Url.Action("GetActivity", new { startDate = startDate, endDate = endDate, page = currentPage + 1 })" 
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <p>No user activity found for the selected date range.</p>
}

<style>
    .action-button {
        min-width: 90px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }
    
    .ban-duration {
        width: 120px;
    }
    
    .small.text-danger {
        margin-bottom: 0;
        font-size: 11px;
    }
</style>