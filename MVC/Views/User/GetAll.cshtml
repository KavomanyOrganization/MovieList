@model List<MVC.Models.User>

@{
    ViewData["Title"] = "Registered Users";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var hasNextPage = ViewBag.HasNextPage;
    var hasPreviousPage = ViewBag.HasPreviousPage;
    var viewMode = Context.Request.Query["viewMode"].ToString() ?? "cards";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Registered Users</h2>
        <p class="text-muted">Total count: <span class="badge bg-primary">@ViewBag.TotalUsers</span></p>
    </div>
    <div class="col-md-6">
        <div class="d-flex justify-content-end align-items-center gap-3">
            <div class="btn-group" role="group" aria-label="View mode">
                <a asp-controller="User" asp-action="GetAll" asp-route-viewMode="cards" asp-route-status="@ViewBag.CurrentStatus"
                   class="btn @(viewMode == "cards" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-grid-3x3-gap"></i>
                </a>
                <a asp-controller="User" asp-action="GetAll" asp-route-viewMode="list" asp-route-status="@ViewBag.CurrentStatus"
                   class="btn @(viewMode == "list" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-list-ul"></i>
                </a>
            </div>
            <div class="btn-group" role="group">
                <a asp-controller="User" asp-action="GetAll" asp-route-viewMode="@viewMode"
                   class="btn @(string.IsNullOrEmpty(ViewBag.CurrentStatus) ? "btn-primary" : "btn-outline-primary")">
                    All
                </a>
                <a asp-controller="User" asp-action="GetAll" asp-route-status="active" asp-route-viewMode="@viewMode"
                   class="btn @(ViewBag.CurrentStatus == "active" ? "btn-primary" : "btn-outline-primary")">
                    Active
                </a>
                <a asp-controller="User" asp-action="GetAll" asp-route-status="banned" asp-route-viewMode="@viewMode"
                   class="btn @(ViewBag.CurrentStatus == "banned" ? "btn-primary" : "btn-outline-primary")">
                    Banned
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    @if (viewMode == "cards")
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var user in Model)
            {
                bool isBanned = user.BannedUntil.HasValue && user.BannedUntil > DateTime.Now;
                <div class="col">
                    <div class="card rounded-4 shadow-sm border-0 h-100 @(isBanned ? "banned-user" : "")" 
                         onclick="location.href='@Url.Action("Details", "User", new { userId = user.Id })'"
                         style="cursor: pointer;">
                        <div class="card-header bg-light border-0 rounded-top-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3" style="width: 48px; height: 48px;">
                                        <span class="fw-bold fs-4">@user.UserName?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-0 fw-bold">@user.UserName</h5>
                                        <p class="card-subtitle text-muted small mb-0 text-break">@user.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-muted me-2">Status:</span>
                                @if (isBanned)
                                {
                                    <span class="badge rounded-pill bg-danger">Banned</span>
                                    
                                    @if (user.BannedUntil.HasValue)
                                    {
                                        <div class="small text-danger mt-1">
                                            Until: @user.BannedUntil.Value.ToLocalTime().ToString("MM/dd/yyyy HH:mm")
                                        </div>
                                        
                                        TimeSpan timeLeft = user.BannedUntil.Value.ToLocalTime() - DateTime.Now;
                                        string formattedTimeLeft = $"{timeLeft.Days}d {timeLeft.Hours}h {timeLeft.Minutes}m";
                                        
                                        <div class="small text-danger">
                                            Time left: @formattedTimeLeft
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success">Active</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 py-3">
                            <div class="d-flex justify-content-end gap-2" onclick="event.stopPropagation();">
                                @if(user.UserName != User.Identity?.Name)
                                {
                                    <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.Id" 
                                        class="btn btn-danger btn-sm rounded-3" 
                                        onclick="return confirm('Are you sure you want to delete this user?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                
                                    @if (isBanned)
                                    {
                                        <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                            <button type="submit" class="btn btn-success btn-sm rounded-3">
                                                <i class="bi bi-check-circle"></i> Unban
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                            <div class="input-group input-group-sm">
                                                <select name="banDurationHours" class="form-select form-select-sm rounded-start">
                                                    <option value="6">6 hours</option>
                                                    <option value="12">12 hours</option>
                                                    <option value="24" selected>24 hours</option>
                                                    <option value="72">3 days</option>
                                                    <option value="168">1 week</option>
                                                    <option value="720">30 days</option>
                                                    <option value="">Permanent</option>
                                                </select>
                                                <button type="submit" class="btn btn-warning btn-sm rounded-end">
                                                    <i class="bi bi-slash-circle"></i>
                                                </button>
                                            </div>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        bool isBanned = user.BannedUntil.HasValue && user.BannedUntil > DateTime.Now;
                        <tr class="@(isBanned ? "banned-user" : "")" onclick="location.href='@Url.Action("Details", "User", new { userId = user.Id })'" style="cursor: pointer;">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px;">
                                        <span class="fw-bold">@user.UserName?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.UserName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-break">@user.Email</td>
                            <td>
                                @if (isBanned)
                                {
                                    <div>
                                        <span class="badge rounded-pill bg-danger">Banned</span>
                                        @if (user.BannedUntil.HasValue)
                                        {
                                            TimeSpan timeLeft = user.BannedUntil.Value.ToLocalTime() - DateTime.Now;
                                            string formattedTimeLeft = $"{timeLeft.Days}d {timeLeft.Hours}h {timeLeft.Minutes}m";
                                            <div class="small text-danger">Time left: @formattedTimeLeft</div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success">Active</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-end gap-2" onclick="event.stopPropagation();">
                                    @if(user.UserName != User.Identity?.Name)
                                    {
                                        <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.Id" 
                                            class="btn btn-danger btn-sm rounded-3" 
                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    
                                        @if (isBanned)
                                        {
                                            <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                                <button type="submit" class="btn btn-success btn-sm rounded-3">
                                                    <i class="bi bi-check-circle"></i> Unban
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post" class="d-flex">
                                                <select name="banDurationHours" class="form-select form-select-sm rounded-start" style="width: auto;">
                                                    <option value="6">6h</option>
                                                    <option value="12">12h</option>
                                                    <option value="24" selected>24h</option>
                                                    <option value="72">3d</option>
                                                    <option value="168">1w</option>
                                                    <option value="720">30d</option>
                                                    <option value="">Permanent</option>
                                                </select>
                                                <button type="submit" class="btn btn-warning btn-sm rounded-end">
                                                    <i class="bi bi-slash-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (totalPages > 1)
    {
        <nav aria-label="Users pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("GetAll", new { page = currentPage - 1 })" tabindex="-1">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" 
                               href="@Url.Action("GetAll", new { page = i, status = ViewBag.CurrentStatus })">@i</a>
                        </li>
                    }
                    else if (i == currentPage - 3 || i == currentPage + 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                <li class="page-item @(!hasNextPage ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("GetAll", new { page = currentPage + 1 })">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info rounded-4 shadow-sm">
        <div class="d-flex align-items-center">
            <i class="bi bi-info-circle-fill fs-4 me-3"></i>
            <p class="mb-0">There are no registered users in the system.</p>
        </div>
    </div>
}

<style>    
    .banned-user {
        opacity: 0.8;
    }
    
    .card.banned-user {
        border-left: 4px solid #dc3545 !important;
    }
    
    tr.banned-user {
        border-left: 4px solid #dc3545;
    }
    
    .form-select {
        border-right: 0;
    }
    
    .input-group-sm .btn {
        height: 100%;
    }
    
    .form-select:focus + .btn {
        border-color: #86b7fe;
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
    
    .btn-group .btn {
        padding: 0.5rem 0.75rem;
    }
    
    .btn-group .btn i {
        font-size: 1rem;
    }
</style>