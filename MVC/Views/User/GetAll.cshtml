@model List<MVC.Models.User>

@{
    ViewData["Title"] = "Зареєстровані користувачі";
}

<div class="container mt-4">
    <h2>Зареєстровані користувачі</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <p class="text-muted">Загальна кількість: <span class="badge bg-primary">@Model.Count</span></p>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-secondary" onclick="window.history.back();">
                <i class="bi bi-arrow-left"></i> Назад
            </button>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var user in Model)
            {
                // Використовуємо локальний час для порівняння
                bool isBanned = user.BannedUntil.HasValue && user.BannedUntil > DateTime.Now;
                <div class="col">
                    <div class="card rounded-4 shadow-sm border-0 h-100 @(isBanned ? "banned-user" : "")">
                        <div class="card-header bg-light border-0 rounded-top-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3" style="width: 48px; height: 48px;">
                                        <span class="fw-bold fs-4">@user.UserName?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-0 fw-bold">@user.UserName</h5>
                                        <p class="card-subtitle text-muted small mb-0 text-break">@user.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-muted me-2">Статус:</span>
                                @if (isBanned)
                                {
                                    <span class="badge rounded-pill bg-danger">Заблоковано</span>
                                    
                                    @if (user.BannedUntil.HasValue)
                                    {
                                        <div class="small text-danger mt-1">
                                            До: @user.BannedUntil.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                        
                                        TimeSpan timeLeft = user.BannedUntil.Value.ToLocalTime() - DateTime.Now;
                                        string formattedTimeLeft = $"{timeLeft.Days}д {timeLeft.Hours}г {timeLeft.Minutes}х";
                                        
                                        <div class="small text-danger">
                                            Залишилось: @formattedTimeLeft
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success">Активний</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 py-3">
                            <div class="d-flex justify-content-end gap-2">
                                @if(user.UserName != User.Identity?.Name){
                                    <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.Id" 
                                        class="btn btn-danger btn-sm rounded-3" 
                                        onclick="return confirm('Ви впевнені, що хочете видалити цього користувача?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                
                                    @if (isBanned)
                                    {
                                        <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                            <button type="submit" class="btn btn-success btn-sm rounded-3">
                                                <i class="bi bi-check-circle"></i> Розблокувати
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post">
                                            <div class="input-group input-group-sm">
                                                <select name="banDurationHours" class="form-select form-select-sm rounded-start">
                                                    <option value="6">6 годин</option>
                                                    <option value="12">12 годин</option>
                                                    <option value="24" selected>24 години</option>
                                                    <option value="72">3 дні</option>
                                                    <option value="168">1 тиждень</option>
                                                    <option value="720">30 днів</option>
                                                    <option value="">Назавжди</option>
                                                </select>
                                                <button type="submit" class="btn btn-warning btn-sm rounded-end">
                                                    <i class="bi bi-slash-circle"></i>
                                                </button>
                                            </div>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info rounded-4 shadow-sm">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                <p class="mb-0">В системі немає зареєстрованих користувачів.</p>
            </div>
        </div>
    }
</div>

<style>    
    .banned-user {
        opacity: 0.8;
        border-left: 4px solid #dc3545 !important;
    }
    
    .form-select {
        border-right: 0;
    }
    
    .input-group-sm .btn {
        height: 100%;
    }
    
    .form-select:focus + .btn {
        border-color: #86b7fe;
    }
</style>