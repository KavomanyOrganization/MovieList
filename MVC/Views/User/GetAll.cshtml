@model List<MVC.Models.User>

@{
    ViewData["Title"] = "Registered users";
}

<div class="container mt-4">
    <h2>Registered users</h2>
    <div class="row mb-4">
        <div class="col-12 col-md-6">
            <p class="text-muted">Total amount: <span class="badge bg-primary">@Model.Count</span></p>
        </div>
        <div class="col-12 col-md-6 text-md-end mt-2 mt-md-0">
            <button class="btn btn-secondary" onclick="window.history.back();">
                <i class="bi bi-arrow-left"></i> Back
            </button>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3">
            @foreach (var user in Model)
            {
                <div class="col">
                    <div class="card rounded-4 shadow-sm border-0 h-100 @(user.IsBanned ? "banned-user" : "")">
                        <div class="card-header bg-light border-0 rounded-top-4">
                            <div class="d-flex flex-wrap align-items-center">
                                <div class="d-flex align-items-center me-3 mb-2 mb-sm-0">
                                    <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center" 
                                         style="width: 40px; height: 40px; min-width: 40px;">
                                        <span class="fw-bold fs-5">@user.UserName?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <a href="@Url.Action("Details", "User", new { userId = user.Id })" 
                                       class="text-decoration-none text-dark">
                                        <h5 class="card-title mb-0 fw-bold text-truncate">@user.UserName</h5>
                                    </a>
                                    <p class="card-subtitle text-muted small mb-0 text-truncate">@user.Email</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body py-2">
                            <div class="d-flex align-items-center">
                                <span class="text-muted me-2 small">Status:</span>
                                @if (user.IsBanned)
                                {
                                    <span class="badge rounded-pill bg-danger small">Banned</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success small">Active</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 py-2">
                            <div class="d-flex justify-content-end flex-wrap gap-2">
                                @if(user.UserName != User.Identity?.Name)
                                {
                                    <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.Id" method="post"
                                       class="btn btn-danger btn-sm py-1"
                                       onclick="return confirm('Are you sure you want to delete this user?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                
                                    <form asp-controller="User" asp-action="Ban" asp-route-id="@user.Id" method="post" class="d-inline">
                                        @if (user.IsBanned)
                                        {
                                            <button type="submit" class="btn btn-success btn-sm py-1">
                                                <i class="bi bi-check-circle"></i> <span class="d-none d-sm-inline">Unban</span>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-warning btn-sm py-1">
                                                <i class="bi bi-slash-circle"></i> <span class="d-none d-sm-inline">Ban</span>
                                            </button>
                                        }
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info rounded-4 shadow-sm">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                <p class="mb-0">No registered users in the system.</p>
            </div>
        </div>
    }
</div>

<style>    
    .banned-user {
        opacity: 0.8;
        border-left: 4px solid #dc3545 !important;
    }
    
    @@media (max-width: 576px) {
        .card {
            border-radius: 0.5rem !important;
        }
        .card-header, .card-footer {
            padding: 0.75rem;
        }
    }
</style>