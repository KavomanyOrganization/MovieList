@model IEnumerable<MVC.Models.Movie>

@{
    ViewData["Title"] = "Seen It Movies";
}

<div class="container mt-4">
    <h2>Seen It Movies</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Cover))
                            {
                                <img src="@item.Cover" alt="@item.Title" class="img-fluid" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>No poster available</span>
                            }
                        </td>
                        <td>@(item.Title ?? "No Title")</td>
                        <td>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rateMovieModal-@item.Id">
                                <i class="bi bi-pencil"></i> @item.Rating
                            </button>
                        </td>
                    </tr>

                    <!-- Modal for Editing Rating -->
                    <div class="modal fade" id="rateMovieModal-@item.Id" tabindex="-1" aria-labelledby="rateMovieModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="rateMovieModalLabel-@item.Id">Rate @(item.Title ?? "Unknown Movie")</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form asp-controller="User" asp-action="RateMovie" method="post">
                                        <input type="hidden" name="movieId" value="@item.Id" />
                                        <div class="form-group">
                                            <label for="rating-@item.Id">Rating (1-10):</label>
                                            <input type="number" id="rating-@item.Id" name="rating" class="form-control" min="1" max="10" value="@item.Rating" required />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-success">Update Rating</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No movies found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>