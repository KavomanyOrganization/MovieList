@model IEnumerable<MVC.Models.Movie>

@{
    ViewData["Title"] = "Seen It Movies";
}

<div class="container mt-4">
    <h2>Seen It Movies</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td onclick="location.href='@Url.Action("Details", "Movie", new { id = item.Id })'" style="cursor: pointer;">
                            @if (!string.IsNullOrEmpty(item.Cover))
                            {
                                <img src="@item.Cover" alt="@item.Title" class="img-fluid" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>Постер відсутній</span>
                            }
                        </td>
                        <td onclick="location.href='@Url.Action("Details", "Movie", new { id = item.Id })'" style="cursor: pointer;">@(item.Title ?? "Без назви")</td>
                        <td>
                            @{
                                var userMovies = ViewBag.UserMovies as IEnumerable<MVC.Models.UserMovie>;
                                var userRating = userMovies?.FirstOrDefault(um => um.MovieId == item.Id)?.Rating ?? 0;
                            }
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#rateMovieModal-@item.Id" onclick="event.stopPropagation();">
                                <i class="bi bi-pencil"></i> @userRating/10
                            </button>
                        </td>
                        <td>
                            <a href="@Url.Action("RemoveFromLists", "User", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="event.stopPropagation();">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                    <!-- Modal for Rating -->
                    <div class="modal fade" id="rateMovieModal-@item.Id" tabindex="-1" aria-labelledby="rateMovieModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="rateMovieModalLabel-@item.Id">Rate @item.Title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form asp-controller="User" asp-action="RateMovie" method="post">
                                        <input type="hidden" name="movieId" value="@item.Id" />
                                        <div class="form-group">
                                            <label for="rating-@item.Id">Рейтинг (1-10):</label>
                                            <input type="number" id="rating-@item.Id" name="rating" class="form-control" min="1" max="10" value="@userRating" required />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-success">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Фільми не знайдено.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.getElementById('rateMovieForm').addEventListener('submit', function(event) {
        var rating = document.getElementById('rating').value;
        if (rating < 1 || rating > 10) {
            alert('Please enter a rating between 1 and 10.');
            event.preventDefault();
        }
    });
</script>