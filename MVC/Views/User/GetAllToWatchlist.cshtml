@model IEnumerable<MVC.Models.Movie>

@{
    ViewData["Title"] = "Бажане до перегляду";
}

<div class="container mt-4">
    <h2>Мій список бажаного до перегляду</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var movie in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center" onclick="location.href='@Url.Action("Details", "Movie", new { id = movie.Id })'" style="cursor: pointer;">
                                @if (!string.IsNullOrEmpty(movie.Cover))
                                {
                                    <img src="@movie.Cover" alt="@movie.Title" class="img-fluid rounded mb-2" />
                                }
                                else
                                {
                                    <img src="/images/no-poster.jpg" alt="No poster available" class="img-fluid rounded mb-2" />
                                }
                            </div>
                            <div class="text-center">
                                <h5 class="card-title mt-2">@(movie.Title ?? "No Title")</h5>
                                <p class="card-text text-muted">@movie.Year</p>
                                <button type="button" class="btn btn-success btn-sm" onclick="event.stopPropagation(); document.getElementById('addSeenItForm-@movie.Id').submit();">
                                    Переглянуто
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" onclick="event.stopPropagation(); document.getElementById('removeFromListForm-@movie.Id').submit();">
                                    <i class="bi bi-trash"></i>
                                </button>
                                <form id="addSeenItForm-@movie.Id" asp-controller="User" asp-action="AddSeenIt" method="post" asp-route-id="@movie.Id" class="d-none"></form>
                                <form id="removeFromListForm-@movie.Id" asp-controller="User" asp-action="RemoveFromLists" method="post" asp-route-id="@movie.Id" class="d-none"></form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>Список порожній! Ви ще не додали жодного фільму до списку бажаного до перегляду.</p>
                <a asp-controller="Movie" asp-action="ViewRating" class="btn btn-primary">Переглянути популярні фільми</a>
            </div>
        }
    </div>
</div>
