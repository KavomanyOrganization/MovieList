@model IEnumerable<MVC.Models.Movie>
@inject Microsoft.AspNetCore.Identity.UserManager<MVC.Models.User> UserManager

@{
    ViewData["Title"] = "Movie Ratings";
    var currentUser = await UserManager.GetUserAsync(User);
    var isUserBanned = currentUser?.IsBanned ?? false;
    var searchTerm = Context.Request.Query["searchTerm"].ToString();
    var hasSearchTerm = !string.IsNullOrEmpty(searchTerm);
}

<div class="container mt-4">
    <h1>Movie Ratings</h1>
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                @if (User.IsInRole("User") || User.IsInRole("Admin"))
                {
                    @if (isUserBanned)
                    {
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#bannedUserModal">
                            <i class="bi bi-plus-circle"></i> Add Movie
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Movie
                        </a>
                    }
                }
                else
                {
                    <div></div> <!-- Empty div to maintain flex spacing -->
                }
                <form asp-controller="Movie" asp-action="Search" method="get" class="d-flex ms-auto" id="searchForm">
                    <div class="input-group" style="max-width: 400px;">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search..." value="@searchTerm" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            @if (hasSearchTerm)
                            {
                                <a asp-controller="Movie" asp-action="ViewRating" class="btn btn-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Cover</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Director</th>
                        <th>Rating</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr onclick="location.href='@Url.Action("Details", "Movie", new { id = movie.Id })'" style="cursor: pointer;">
                            <td>
                                @if (!string.IsNullOrEmpty(movie.Cover))
                                {
                                    <img src="@movie.Cover" alt="@movie.Title" class="img-thumbnail" style="max-height: 100px;" />
                                }
                                else
                                {
                                    <span>No cover</span>
                                }
                            </td>
                            <td>@movie.Title</td>
                            <td>@movie.Year</td>
                            <td>@movie.Director</td>
                            <td>
                                @{
                                    double ratingOutOf10 = movie.Rating; 
                                }
                                <span>@ratingOutOf10.ToString("0.0")/10</span>
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Movie" asp-action="Update" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" 
                                           class="btn btn-danger btn-sm" 
                                           onclick="return confirm('Are you sure you want to delete this movie?');">
                                            <i class="bi bi-trash"></i> 
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            @if (hasSearchTerm)
            {
                <p>No movies found matching your search criteria.</p>
                <a asp-controller="Movie" asp-action="ViewRating" class="btn btn-outline-primary">Clear search</a>
            }
            else
            {
                <p>No movies have been added yet. Click the "Add Movie" button to get started.</p>
            }
        </div>
    }
</div>

<!-- Modal for banned users -->
<div class="modal fade" id="bannedUserModal" tabindex="-1" aria-labelledby="bannedUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="bannedUserModalLabel">Account Restriction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="text-center mb-4">
                    <i class="bi bi-slash-circle text-danger fs-1"></i>
                </div>
                <p class="text-center">
                    Your account has been banned. You cannot add new movies.
                </p>
                <p class="text-center text-muted small">
                    Please contact an administrator for more information.
                </p>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>