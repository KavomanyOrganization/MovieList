@model MVC.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Cover))
                            {
                                <img src="@Model.Cover" alt="@Model.Title" class="img-fluid rounded" />
                            }
                            else
                            {
                                <span>No cover available</span>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Rating</dt>
                                <dd class="col-sm-9">@Model.Rating</dd>

                                <dt class="col-sm-3">Title</dt>
                                <dd class="col-sm-9">@Model.Title</dd>

                                <dt class="col-sm-3">Director</dt>
                                <dd class="col-sm-9">@Model.Director</dd>

                                <dt class="col-sm-3">Year</dt>
                                <dd class="col-sm-9">@Model.Year</dd>

                                <dt class="col-sm-3">Duration</dt>
                                <dd class="col-sm-9">@Model.Duration minutes</dd>
                                
                                <dt class="col-sm-3">Genres</dt>
                                <dd class="col-sm-9">
                                    @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var genre in Model.MovieGenres)
                                            {
                                                <li>@genre.Genre.Name</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No genres specified</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-3">Countries</dt>
                                <dd class="col-sm-9">
                                    @if (Model.MovieCountries != null && Model.MovieCountries.Any())
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var country in Model.MovieCountries)
                                            {
                                                <li>@country.Country.Name</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No countries specified</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">@Model.Description</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div>
                        @if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <a asp-controller="User" asp-action="AddToWatch" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-plus"></i> To Watch!
                            </a>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rateMovieModal">
                                <i class="bi bi-eye"></i> Seen It!
                            </button>
                        }
                    </div>
                    <div>
                        <button class="btn btn-secondary" onclick="window.history.back();">
                            <i class="bi bi-arrow-left"></i> Back
                        </button>
                    </div>
                </div>
            </div>
            @if (User.IsInRole("User"))
                {
                <div class="mt-3 text-center">
                    <small>Notice incorrect information? <a asp-controller="Report" asp-action="CreateReport" style="color: red;">Report</a></small>
                </div>
                }
        </div>
    </div>
</div>

<!-- Modal for Rating -->
<div class="modal fade" id="rateMovieModal" tabindex="-1" aria-labelledby="rateMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rateMovieModalLabel">Rate @Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="rateMovieForm" asp-controller="User" asp-action="RateMovie" method="post">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="rating">Rating (1-10):</label>
                        <input type="number" id="rating" name="rating" class="form-control" min="1" max="10" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('rateMovieForm').addEventListener('submit', function(event) {
        var rating = document.getElementById('rating').value;
        if (rating < 1 || rating > 10) {
            alert('Please enter a rating between 1 and 10.');
            event.preventDefault();
        }
    });
</script>