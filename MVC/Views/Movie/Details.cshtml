@model MVC.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
    bool isInUserLists = false;
    bool isCreator = false;
    
    if (ViewBag.IsInUserLists != null)
    {
        isInUserLists = ViewBag.IsInUserLists;
    }
    if (ViewBag.IsCreator != null)
    {
        isCreator = ViewBag.IsCreator;
    }
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">@Model.Title</h3>
                    <div>
                        @if (User.IsInRole("Admin") || isCreator)
                        {
                            <div class="btn-group" role="group">
                                <a asp-controller="Movie" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" 
                                        class="btn btn-danger btn-sm" 
                                        onclick="return confirm('Are you sure you want to delete this movie?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Cover))
                            {
                                <a href="@Model.Cover" target="_blank">
                                    <img src="@Model.Cover" alt="@Model.Title" class="img-fluid rounded" />
                                </a>
                            }
                            else
                            {
                                <span>No cover available</span>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3 text-nowrap">Rating</dt>
                                <dd class="col-sm-9">@Model.Rating</dd>

                                <dt class="col-sm-3 text-nowrap">Title</dt>
                                <dd class="col-sm-9">@Model.Title</dd>

                                <dt class="col-sm-3 text-nowrap">Director</dt>
                                <dd class="col-sm-9">@Model.Director</dd>

                                <dt class="col-sm-3 text-nowrap">Year</dt>
                                <dd class="col-sm-9">@Model.Year</dd>

                                <dt class="col-sm-3 text-nowrap">Duration</dt>
                                <dd class="col-sm-9">@Model.Duration minutes</dd>
                                
                                <dt class="col-sm-3 text-nowrap">Genres</dt>
                                <dd class="col-sm-9">
                                    @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var genre in Model.MovieGenres)
                                            {
                                                <li>@(genre.Genre != null ? genre.Genre.Name : "Unknown Genre")</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No genres specified</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-3 text-nowrap">Countries</dt>
                                <dd class="col-sm-9">
                                    @if (Model.MovieCountries != null && Model.MovieCountries.Any())
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var country in Model.MovieCountries)
                                            {
                                                <li>@(country.Country != null ? country.Country.Name : "Unknown Country")</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No countries specified</span>
                                    }
                                </dd>

                                <dt class="col-sm-3 text-nowrap">Description</dt>
                                <dd class="col-sm-9">@Model.Description</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div>
                        @if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            @if (!isInUserLists)
                            {
                                <a asp-controller="User" asp-action="AddToWatch" asp-route-movieId="@Model.Id" class="btn btn-primary">
                                    <i class="bi bi-plus"></i> To Watch!
                                </a>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#rateMovieModal">
                                    <i class="bi bi-eye"></i> Seen It!
                                </button>
                            }
                            else
                            {
                                <a asp-controller="User" asp-action="RemoveFromLists" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="bi bi-dash-circle"></i> Remove from My Lists
                                </a>
                            }
                        }
                    </div>
                    <div>
                        <button class="btn btn-secondary" onclick="window.history.back();">
                            <i class="bi bi-arrow-left"></i> Back
                        </button>
                    </div>
                </div>
            </div>       
            @if (User.IsInRole("User"))
            {
                <div class="mt-3 text-center">
                    <small>Notice incorrect information? 
                        <a href="#" data-bs-toggle="modal" data-bs-target="#reportModal" style="color: red;">Report</a>
                    </small>
                </div>
                
                @if (User.IsInRole("User"))
                {
                    <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="reportModalLabel">Create a Report for this Movie</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <!-- Форма для створення звіту -->
                                    <form asp-controller="Report" asp-action="Create" method="post">
                                        <div class="mb-3">
                                            <label for="comment" class="form-label">Comment</label>
                                            <textarea id="comment" name="comment" class="form-control" rows="4" required></textarea>
                                        </div>
                                        <input type="hidden" name="MovieId" value="@Model.Id" />
                                        <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-plus-circle"></i> Submit Report
                                    </button>
                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (User.IsInRole("Admin"))
            {
                <div class="mt-3">
                    <h4>Reports for this Movie</h4>
                    @if (Model.Reports != null && Model.Reports.Any())
                    {
                        <ul class="list-group">
                            @foreach (var report in Model.Reports)
                            {
                                <li class="list-group-item">
                                    <strong></strong> @report.Comment
                                    <br />
                                    <small class="text-muted">Reported on @report.CreationDate</small>
                                    <form action="@Url.Action("Delete", "Report", new { id = report.Id })" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm float-end" onclick="return confirm('Are you sure you want to delete this report?');">
                                            <i class="bi bi-x-circle"></i> Close Report
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No reports available for this movie.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal for Rating -->
<div class="modal fade" id="rateMovieModal" tabindex="-1" aria-labelledby="rateMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rateMovieModalLabel">Rate @Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="rateMovieForm" asp-controller="User" asp-action="RateMovie" method="post">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="rating">Rating (1-10):</label>
                        <input type="number" id="rating" name="rating" class="form-control" min="1" max="10" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('rateMovieForm').addEventListener('submit', function(event) {
        var rating = document.getElementById('rating').value;
        if (rating < 1 || rating > 10) {
            alert('Please enter a rating between 1 and 10.');
            event.preventDefault();
        }
    });
  
    document.addEventListener("DOMContentLoaded", function() {
        const dtElements = document.querySelectorAll('dt.col-sm-3');
        let maxWidth = 0;

        dtElements.forEach(dt => {
            const width = dt.offsetWidth;
            if (width > maxWidth) {
                maxWidth = width;
            }
        });

        dtElements.forEach(dt => {
            dt.style.minWidth = `${maxWidth}px`;
        });
    });
</script>