@model MVC.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Edit Movie</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-warning">
                            <a href="#" class="btn btn-warning btn-sm" onclick="return false;">
                                <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                            </a>
                        </div>
                    }
                    <form asp-action="Update" asp-route-id="@ViewBag.MovieId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" value="@Model.Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Cover" class="form-label">Cover Image URL</label>
                            <input asp-for="Cover" class="form-control" value="@Model.Cover" />
                            <span asp-validation-for="Cover" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Year" class="form-label">Release Year</label>
                                    <input asp-for="Year" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" value="@Model.Year" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Duration" class="form-label">Duration (minutes)</label>
                                    <input asp-for="Duration" class="form-control" type="number" min="1" value="@Model.Duration" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Director" class="form-label">Director</label>
                            <input asp-for="Director" class="form-control" value="@Model.Director" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Genres</label>
                            <select asp-for="SelectedGenreIds" class="form-control select2-genres" multiple="multiple">
                                @foreach (var genre in Model.Genres) {
                                    <option value="@genre.Key">@genre.Value</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedGenreIds" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Countries</label>
                            <select asp-for="SelectedCountryIds" class="form-control select2-countries" multiple="multiple">
                                @foreach (var country in Model.Countries) {
                                    <option value="@country.Key">@country.Value</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedCountryIds" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Movie" asp-action="ViewRating" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Ratings
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.select2-genres').select2({
                placeholder: "Select genres",
                allowClear: true,
                width: '100%'
            });

            $('.select2-countries').select2({
                placeholder: "Select countries",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}