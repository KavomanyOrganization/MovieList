@model IEnumerable<MVC.Models.Country>

@{
    ViewData["Title"] = "List of Countries";
}

<div class="container mt-4">
    <h1>List of Countries</h1>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col">
                <a asp-controller="Country" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Country
                </a>
            </div>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Model)
                    {
                        <tr>
                            <td>@country.Name</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Country" asp-action="Update" asp-route-id="@country.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-controller="Country" asp-action="Delete" asp-route-id="@country.Id" 
                                           class="btn btn-danger btn-sm" 
                                           onclick="return confirm('Are you sure you want to delete this country?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No countries have been added yet. Click the "Add Country" button to get started.</p>
        </div>
    }
</div>
