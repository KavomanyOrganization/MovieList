@model MVC.ViewModels.CountryViewModel

@{
    ViewData["Title"] = "Edit Country";
}

<div class="modal fade" id="editCountryModal" tabindex="-1" aria-labelledby="editCountryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content card-rounded">
            <div class="modal-header card-header-gradient">
                <h5 class="modal-title" id="editGenreCountryLabel">Edit Country</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body movie-details">
                <form asp-action="Update" method="post" id="editCountryForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    @if (Model.Id != 0)
                    {
                        <input type="hidden" asp-for="Id" />
                    }

                    <div class="mb-3">
                        <label for="Name" class="form-label">Country Name</label>
                        <input type="text" class="form-control" id="Name" asp-for="Name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary-style btn-rounded" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editCountryForm" class="btn btn-secondary-style btn-rounded">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var editCountryModal = new bootstrap.Modal(document.getElementById('editCountryModal'));
            editCountryModal.show();

            $('#editCountryModal').on('hidden.bs.modal', function () {
                window.location.href = '@Url.Action("GetAll")';
            });
        });
    </script>
}