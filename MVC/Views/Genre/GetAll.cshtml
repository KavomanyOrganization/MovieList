@model IEnumerable<MVC.Models.Genre>

@{
    ViewData["Title"] = "List of Genres";
}

<div class="container mt-4 w-50 mx-auto">
    <h1 class="text-center">Add New Genre</h1>
    @await Html.PartialAsync("_CreateGenrePartial", new MVC.ViewModels.GenreViewModel())
</div>

<div class="container mt-4 d-flex justify-content-center">
    <div style="width: 50%;">
        <h1 class="text-center">List of Genres</h1>
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th class="text-end">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var genre in Model)
                        {
                            <tr>
                                <td>@genre.Name</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Genre" asp-action="Update" asp-route-id="@genre.Id" class="btn btn-warning btn-sm">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" 
                                               class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure you want to delete this genre?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <p>No genres have been added yet.</p>
            </div>
        }
    </div>
</div>

